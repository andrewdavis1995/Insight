<UserControl x:Class="Insight.Views.BetTypeSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Insight.Views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Name="imgIcon" Source="/Insight;component/Resources/over1.png"></Image>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" FontFamily="/Insight;component/Fonts/#Lato" Foreground="#181818" FontSize="16" Name="txtName">Bet Type Name</Label>
            <Label Grid.Row="1" FontFamily="/Insight;component/Fonts/#Lato" Foreground="{DynamicResource TextBrush}" FontSize="9" Name="txtDescription">Here is a description</Label>
        </Grid>

        <Label></Label>
        
    </Grid>
</UserControl>
