<UserControl x:Class="Insight.Views.ConfigCheckbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Insight.Views"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="400">
    <Grid Height="Auto">

        <Border BorderThickness="0, 0, 0, 2" VerticalAlignment="Center" Padding="20, 10"  BorderBrush="#44000000">
            <CheckBox x:Name="checkBox" HorizontalAlignment="Left" Margin="10,5,10,0" VerticalAlignment="Top" FontFamily="Lato" Content="Content here" FontSize="12"/>
        </Border>
    </Grid>
</UserControl>
