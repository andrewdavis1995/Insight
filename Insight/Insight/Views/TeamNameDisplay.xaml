<UserControl x:Class="Insight.Views.TeamNameDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Insight.Views"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Name="imgBadge" Margin="5,2,2,2" RenderOptions.BitmapScalingMode="HighQuality"></Image>
        <TextBlock Grid.Column="1" Name="txtTeam" FontFamily="Abel" VerticalAlignment="Center" Margin="2" FontSize="12" Foreground="#eaeaea">Team Name</TextBlock>
        
    </Grid>
</UserControl>
